block head
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		title
			block pageTitle
				| Faith &amp; Learning Initiative
		meta(name='description', content='The Faith & Learning Initiative is an effort to spotlight, support, and inspire faculty as they fulfill the unique mission of BYU: “to assist individuals in their quest for perfection and eternal life.”')
		meta(name='author', content='The Faith & Learning Initiative')
		meta(name='keywords', content='faith, learning, study, BYU, Brigham, Young, University')
		//- meta(name='viewport', content='width=device-width, , initial-scale=1')

		// Place favicon.ico and apple-touch-icon.png in the root directory
		link(rel='shortcut icon', href='favicon.ico')

		// Scripts loaded via script loader. See notes in init.js file.
		script(src='js/modernizr.js')
