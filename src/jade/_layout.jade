		//-	===============
		//-	HEADER
		//-	===============
		block header
			header#main-header(role='banner')
				#header-top.wrapper
					a#logo(href='http://www.byu.edu/')
						img(src="http://home.byu.edu/home/sites/default/files/global/img/byu-logo-header.svg")

					// This should link to your organization's home page
					h1
						a#site-name(href='index.html', title="Faith & Learning Initiative")
							block heading
								| Faith & Learning Initiative
						p#tagline Achieving the Unique Mission of BYU

					block sign-in
						a.sign-in.button(href='http://home.byu.edu/home/cas') Sign in

		//-	===============
		//-	NAV
		//-	===============
		block nav
			.nav-container

				// Primary Nav
				nav#primary-nav(role='navigation'): ul
					block navlinks
						li 
							a.current(href='index.html') Home
						li
							a(href='examples.html') Examples
						li
							a(href='research.html') Research
						li
							a(href='getinvolved.html') Get Involved
						li
							a(href='about.html') About Us

				// Secondary Nav
				nav#secondary-nav(role='navigation'): ul
					li
						a(href='nfseminar.html') New Faculty Seminar
					li
						a(href='faq.html') Common Concerns

		//-	===============
		//-	MAIN CONTENT WRAPPER
		//-	===============
		block contentwrapper
			- if( typeof(contentclasses) == 'undefined') { var contentclasses = '' }
			#content(class='wrapper clearfix #{contentclasses}', role='main')								
				//-	===============
				//-	CONTENT
				//-	===============
				block content
					// Content goes here, if any

		//- ===============
		//-	FOOTER
		//-	===============
		block footer
			footer#page-footer(role='contentinfo')
				#footer-links
					.wrapper
						.col.alpha
							h2 Site Links
							ul
								li: a(href='#') Home
								li: a(href='explore.html') Explore
								li: a(href='research.html') Research
								li: a(href='about.html') About Us
								li.site-links-small: a(href='nfseminar.html') New Faculty Seminar
								li.site-links-small: a(href='faq.html') Common Concerns

						.col
							h2 Contact Us
							ul
								li: a#fclink(href="http://facultycenter.byu.edu") BYU Faculty Center
