					option(value="alanWilkins") Alan Wilkins
					option(value="janeBirch") Jane Birch
					option(value="stephenYanchar") Stephen Yanchar
					option(value="jeffreyReber") Jeffrey Reber
				input(type="text" width=10 name="keywords" placeholder="Keyword")
				input(type="submit" value="Go")
