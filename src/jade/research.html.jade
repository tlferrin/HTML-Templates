block content
	.pageIntro
		p Research and discussions on topics related to faith and learning happen all over campus. See what people are doing&mdash;and get involved!
	.sortBox
		p Filter by&hellip;
		form.sortBy(action="#")
				input.sortSelected(type="button" value="Most Recent")
				select(name="status")
					option(value="all") All Projects
					option(value="current") Current Projects
					option(value="completed") Completed Projects
				select(name="college")
					option(value="all") All Colleges
					option(value="Bus") Business
					option(value="Edu") Education
					option(value="EngTech") Engineering &amp; Technology
					option(value="FHSS") Family, Home, &amp; Social Sciences
					option(value="FAC") Fine Arts &amp; Communications
					option(value="Hum") Humanities
					option(value="IntStud") International Studies
					option(value="Law") Law
					option(value="LifeSci") Life Sciences
					option(value="Nurs") Nursing
					option(value="PMS") Physical &amp; Mathematical Sciences
					option(value="RelEd") Religious Education
				select(name="person")
